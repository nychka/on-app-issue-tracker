

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-vertical form-signin'}) do |f| %>
<%= f.error_notification %>
<h2 class="form-signin-heading">Sign up</h2>
<div class="form-inputs">
		<%= f.input :email,label: false,  required: true, input_html: {class: 'form-control'}, autofocus: true, placeholder: 'Email' %>
	
		<%= f.input :password,label: false, required: true, input_html: {class: 'form-control'}, placeholder: 'Password' %>
	
		<%= f.input :password_confirmation, label: false, required: true, input_html: {class: 'form-control'}, placeholder: 'Password again' %>
</div>

<div class="form-actions">
	<%= f.button :submit, "Sign up", class: 'btn btn-primary' %>
	<%= render "devise/shared/links" %>
</div>
<% end %>


